<%- include('partials/header') %>

<div class="container pt-5">
  <h1 class="d-flex justify-content-center">Register</h1>
  <h6 class="d-flex justify-content-center text-danger small"><%=regError%></h6>
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /register route -->
          <form action="/api/register" method="POST">
            <div class="form-group">
              <label for="alias">Alias</label>
              <input id="alias" type="text" class="form-control" name="alias">
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input id="email" type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input id="password" type="password" class="form-control" name="password">
            </div>
            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-dark mt-3 col-4">Register</button>
              <a class="btn btn-warning mt-3 col-4" href="/api" role="button">Go Back</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
