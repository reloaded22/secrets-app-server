<%- include('partials/header') %>
<%- include('navbar', {loggedIn:loggedIn}) %>

  <div class="container-fluid pt-5 text-center">
    <h1 class="display-3"><i class="fas fa-key fa-sm me-2"></i>Here lay all people's secrets:</h1>
    <hr>
    <div class="row g-2">
      <%let count = -1%>
      <%users.forEach((user, i)=>{%>
        <%user.secrets.forEach((secret)=>{%>
          <%count += 1%>
          <% if (count%2 === 0) { %>
            <div class="col-4 col-md-3 col-lg-2 text-capitalize text-color-1">
              <%- include('card', {secret:secret}) %>
            </div>
          <%} else {%>
            <div class="col-4 col-md-3 col-lg-2 text-capitalize text-color-2">
              <%- include('card', {secret:secret}) %>
            </div>
          <%}%>
        <%})%>
      <%})%>
    </div>
  </div>
  <hr>
  <div class="text-center">
    <a class="btn btn-dark" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
